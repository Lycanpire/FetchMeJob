{
  "title": "FetchMeJob LinkedIn Jobs Scraper",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "keywords": {
      "title": "Keywords",
      "type": "array",
      "editor": "select",
      "items": {
        "type": "string",
        "enum": [
          "product manager",
          "project manager",
          "program manager"
        ]
      },
      "description": "List of keywords to search for in job postings."
    },
    "location": {
      "title": "Location",
      "type": "string",
      "editor": "textfield",
      "default": "India",
      "description": "Enter the location for job search"
    },
    "maxResults": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "description": "Maximum number of job postings to scrape."
    },
    "includeRecruiterInfo": {
      "type": "boolean",
      "default": true,
      "description": "Whether to include recruiter information in the results."
    },
    "proxy": {
      "type": "object",
      "properties": {
        "useProxy": {
          "type": "boolean",
          "default": true,
          "description": "Whether to use a proxy for requests."
        },
        "proxyUrl": {
          "type": "string",
          "description": "URL of the proxy server."
        }
      },
      "required": ["useProxy"]
    }
  },
  "required": ["keywords", "location"]
}
